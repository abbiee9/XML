<?xml version="1.0" encoding="UTF-8"?>
<ap:schema xmlns:ap="http://www.w3.org/2001/XMLSchema" >


<ap:element name="Cover">
<ap:complexType>
<ap:simpleContent>
<ap:extension base="ap:string">
<ap:attribute name="Cover" type="ap:string" use="required"/>
</ap:extension>
</ap:simpleContent>
</ap:complexType>
</ap:element>

<ap:element name="Category">
<ap:complexType>
<ap:simpleContent>
<ap:extension base="ap:string">
 <ap:attribute name="Category" type="ap:string" use="required"/>
</ap:extension>
</ap:simpleContent>
</ap:complexType>
</ap:element>

<ap:element name="ISBN">
<ap:complexType>
<ap:simpleContent>
<ap:extension base="ap:string">
<ap:attribute name="ISBN" type="ap:string" use="required"/>
</ap:extension>
</ap:simpleContent>
</ap:complexType>
</ap:element>

<ap:element name="Rating">
<ap:complexType>
<ap:simpleContent>
<ap:extension base="ap:integer">
 <ap:attribute name="Rating" type="ap:integer" use="required"/>
</ap:extension>
</ap:simpleContent>
</ap:complexType>
</ap:element>

<ap:element name="book">
	<ap:complexType>
	  <ap:sequence>
	    <ap:element name="Title" type="ap:string"/>
	    <ap:element name="Author" type="ap:string"/>
	    <ap:element name="Publisher" type="ap:string"/>
	    <ap:element ref="Cover"></ap:element>
	    <ap:element ref="Category"></ap:element>
	    <ap:element ref="ISBN"></ap:element>
	    <ap:element ref="Rating"></ap:element>
	    <ap:element name="Price" type="ap:integer"/>
	    <ap:element name="Comments" type="ap:string"/> 
	  </ap:sequence>    
	</ap:complexType>

</ap:element> 

<ap:element name="Library">
	<ap:complexType>
	  <ap:sequence>
	   <ap:element ref="book" maxOccurs="20"></ap:element>
	  </ap:sequence>
	</ap:complexType>

</ap:element> 

</ap:schema>
